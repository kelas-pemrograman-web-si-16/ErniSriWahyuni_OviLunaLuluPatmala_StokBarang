aside.main-sidebar
    // sidebar: style can be found in sidebar.less
    section.sidebar
        // Sidebar user panel
        .user-panel
            .pull-left.image
                img.img-circle(src='/adminlte/dist/img/user2-160x160.jpg' alt='User Image')
            .pull-left.info
                p #{session_store.username}
                a(href='#')
                    i.fa.fa-circle.text-warning
                    |  Online
        ul.sidebar-menu(data-widget='tree')
            li.header MAIN NAVIGATION
                li.treeview
                    a(href='/')
                        i.fa.fa-dashboard
                        span Dashboard
                if(session_store.admin == true)
                    li.treeview
                        a(href='#')
                            i.fa.fa-laptop
                            span Data Barang
                            span.pull-right-container
                                i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                a(href='/inputdata')
                                    i.fa.fa-circle-o
                                    |  Input Data Barang
                            li
                                a(href='/databarang')
                                    i.fa.fa-circle-o
                                    |  Lihat Data Barang
                else
                    li.treeview
                        a(href='#')
                            i.fa.fa-laptop
                            span Data Barang
                            span.pull-right-container
                                i.fa.fa-angle-left.pull-right
                        ul.treeview-menu
                            li
                                a(href='/databarang')
                                    i.fa.fa-circle-o
                                    |  Lihat Data Barang

                li.treeview
                    a(href='#')
                        i.fa.fa-laptop
                        span Barang Masuk
                        span.pull-right-container
                            i.fa.fa-angle-left.pull-right
                    ul.treeview-menu
                        li
                            a(href='/datainput')
                                i.fa.fa-circle-o
                                |  Input Data Barang
                        li
                            a(href='/barangdata')
                                i.fa.fa-circle-o
                                |  Lihat Data Barang

                li.treeview
                    a(href='#')
                        i.fa.fa-laptop
                        span Barang Keluar
                        span.pull-right-container
                            i.fa.fa-angle-left.pull-right
                    ul.treeview-menu
                        li
                            a(href='/inputkeluar')
                                i.fa.fa-circle-o
                                |  Input Data Barang
                        li
                            a(href='/datakeluar')
                                i.fa.fa-circle-o
                                |  Lihat Data Barang


    // /.sidebar
